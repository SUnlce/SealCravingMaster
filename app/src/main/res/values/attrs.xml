<resources>

    <declare-styleable name="SealCravingTextView">
        <attr name="numRows" format="integer|reference"></attr>
        <attr name="numColumns" format="integer"></attr>
        <attr name="sealsColor" format="color"></attr>
        <attr name="textSize" format="dimension"></attr>
        <attr name="text" format="string|reference"></attr>
        <attr name="orientation">
            <flag name="vertical" value="0"></flag>
            <flag name="horizontal" value="1"></flag>
        </attr>
        <attr name="textStyle">
            <enum name="seals" value="0"></enum>
            <enum name="running_hand" value="1"></enum>
        </attr>
        <attr name="inRelief" format="boolean"></attr>
    </declare-styleable>

</resources>
